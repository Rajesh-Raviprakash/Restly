<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:gridSpec="1|8|#0093eeff|K:#ee8700ff:16,l:72,l:16,r|S:#83ee00ff:16,0,l:16,56,l:16,0,r">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_height="100dp">

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="1.2"
                android:layout_marginTop="3dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">

        <TextView
        android:layout_width="81px"
        android:layout_height="wrap_content"
        android:text="@string/Menu"
        android:textSize="27dp"
        android:textStyle="bold"
        android:layout_weight="5"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:id="@+id/ServerTitleText" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorPrimary"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/location_18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clever Rabbit"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="20dp"
            android:textSize="14dp"
            android:layout_weight="0.9"
            android:layout_gravity="center | end"/>
        
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
        android:layout_width="300dp"
        android:layout_gravity="center_vertical"
        android:textSize="13dp"
        android:hint="Restaurant or product"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:layout_weight="4"
        android:id="@+id/menu_searchbar"
        android:drawableLeft="@drawable/search"
        android:background="@drawable/corner_edittext"
        android:layout_height="36dp" 
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textSize="13dp"
            android:layout_weight="1"
            android:text="@string/clear"
            android:id="@+id/clear"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical | end"
            android:background="@drawable/abc_ic_clear_material"
            android:textColor="@color/green"/>

                    </LinearLayout>
        
        </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.Toolbar>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/categoryRecyclerView"
      android:layout_width="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
      android:layout_height="100dp"/>


     <android.support.v7.widget.RecyclerView
        android:id="@+id/menuRecyclerView"
      android:layout_width="match_parent"
       android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_above="@id/navigation"
       android:layout_below="@id/categoryRecyclerView"
      android:layout_height="fill_parent"/>

        <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|end"
        android:layout_above="@id/navigation"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:tint="@color/colorPrimary"
        app:borderWidth="5dp"
        app:fabSize="auto"
        app:backgroundTint="@color/green"
        app:srcCompat="@drawable/handicon" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        app:itemIconTint="@drawable/bottom_navigation_selector"
        app:labelVisibilityMode="labeled"
        app:itemTextColor="@drawable/bottom_navigation_selector"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />

</RelativeLayout>
